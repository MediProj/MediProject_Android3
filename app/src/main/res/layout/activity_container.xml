<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ContainerSelectActivity"
    style="@style/linearViewScreen">

    <RelativeLayout
        style="@style/titleBanner">

        <TextView
            android:id="@+id/p_name"
            style="@style/title_pname"/>

        <TextView style="@style/title_jay" />

        <ImageView
            android:src="@drawable/white_logo_2"
            style="@style/title_logo"/>
    </RelativeLayout>

    <TextView
        android:layout_weight="2"
        android:textSize="30sp"
        android:textColor="@color/Black"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:text="소변량을 측정합니다. 용기를 선택해주세요"
        android:layout_width="wrap_content"
        android:layout_height="0sp" />

    <ScrollView
        android:layout_weight="4"
        style="@style/linearScrollView">

        <LinearLayout
            style="@style/layoutHoriz"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_height="match_parent"
                android:id="@+id/imgDiaper"
                style="@style/imgLeft"
                android:src="@drawable/container_diaper"
                android:contentDescription="@string/containerDiaperDescription" />

            <ImageButton
                android:id="@+id/imgBottle"
                style="@style/imgCenter"
                android:layout_height="match_parent"
                android:src="@drawable/container_bottle"
                android:contentDescription="@string/containerBottleDescription" />

            <ImageButton
                android:id="@+id/imgGreen"
                style="@style/imgRight"
                android:src="@drawable/container_green"
                android:contentDescription="@string/containerGreenDescription"/>

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        style="@style/linearViewBot">

        <Button
            android:id="@+id/Bnt_prev"
            style="@style/buttonPrev"
            android:text="이전"/>

   </RelativeLayout>

</LinearLayout>